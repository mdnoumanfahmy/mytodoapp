@model IEnumerable<WebApplication24_todo_app.Models.Task>

@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Panel</h1>
<a class="btn btn-danger my-3" href="/User/Logout">Logout</a>

<p class="alert alert-success">@TempData["message"]</p>

<form action="/User/PanelAdd" method="POST">
    <input type="text" name="title" placeholder="Enter title" class="form-control" />
    <input type="text" name="description" placeholder="Enter description" class="form-control mt-2" />
    <input type="submit" value="Create" class="btn btn-primary mt-2"/>
</form>

<h2>Task List</h2>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td><a href="/User/PanelDelete/@item.Id" class="btn btn-danger">Delete</a></td>
            </tr>
        }
    </tbody>
</table>